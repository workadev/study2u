<%#
  This template is i18n-ready: if you don't use i18n, then you can replace the pagy_t
  calls with the actual strings ("&lsaquo; Prev", "Next &rsaquo;", "&hellip;").
  The link variable is set to a proc that returns the link tag.
  Usage: link.call( page_number [, text [, extra_attributes_string ]])
-%>
<% link = pagy_link_proc(pagy) -%>
<%#                            -%><nav aria-label="pager" class="pagy-bootstrap-nav" role="navigation">
<%#                            -%>  <ul class="pagination pagination-rounded justify-content-end mb-2">
<% if pagy.prev                -%>    <li class="paginate_button page-item prev"><%== link.call(pagy.prev, raw("<i class='mdi mdi-chevron-left'></i>"), 'aria-label="previous"') %></li>
<% else                        -%>    <li class="paginate_button page-item previous disabled"><a href="#" class="page-link"><%== raw("<i class='mdi mdi-chevron-left'></i>") %></a></li>
<% end                         -%>
<% pagy.series.each do |item| # series example: [1, :gap, 7, 8, "9", 10, 11, :gap, 36] -%>
<%   if    item.is_a?(Integer) -%>    <li class="paginate_button page-item"><%== link.call(item) %></li>
<%   elsif item.is_a?(String)  -%>    <li class="paginate_button page-item active"><%== link.call(item) %></li>
<%   elsif item == :gap        -%>    <li class="paginate_button page-item disabled gap"><a href="#" class="page-link"><%== pagy_t('pagy.nav.gap') %></a></li>
<%   end                       -%>
<% end                         -%>
<% if pagy.next                -%>    <li class="paginate_button page-item next"><%== link.call(pagy.next, raw("<i class='mdi mdi-chevron-right'></i>"), 'aria-label="next"') %></li>
<% else                        -%>    <li class="paginate_button page-item next disabled"><a href="#" class="page-link"><%== raw("<i class='mdi mdi-chevron-right'></i>") %></a></li>
<% end                         -%>
<%#                            -%>  </ul>
<%#                            -%></nav>
