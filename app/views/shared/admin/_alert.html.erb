<% flash.each do |f| %>
  <% type = f[0].to_s.gsub('alert', 'danger').gsub('notice', 'success') %>
  <% message = f[1] %>
  <div class="row">
    <div class="col-12">
      <div class="alert alert-<%= type %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
  </div>
<% end %>
