<tr id="<%= dom_id(role) %>">
  <td><%= role.name %></td>
  <td><%= date_format(role.created_at, "datetime") %></td>
  <td><%= date_format(role.updated_at, "datetime") %></td>
  <td class="text-end">
    <div class="d-flex gap-3">
      <%= link_to raw("<i class='mdi mdi-eye font-size-18'></i>"), admin_role_path(role), class: "text-primary", "data-bs-toggle": "tooltip", "data-bs-placement": "top", "title": "View detail" if action_policy("show") %>
      <%= link_to raw("<i class='mdi mdi-pencil font-size-18'></i>"), edit_admin_role_path(role), class: "text-success", "data-bs-toggle": "tooltip", "data-bs-placement": "top", "title": "Update" if action_policy("update") %>
      <%= link_to raw("<i class='mdi mdi-delete font-size-18'></i>"), admin_role_path(role), class: "text-danger", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, "data-bs-toggle": "tooltip", "data-bs-placement": "top", "title": "Delete" if action_policy("destroy") %>
    </div>
  </td>
</tr>
