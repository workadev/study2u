<tr id="<%= dom_id(institution) %>">
  <td><%= institution.name %></td>
  <td><%= institution.ownership %></td>
  <td><%= institution.status %></td>
  <td><%= date_format(institution.created_at, "datetime") %></td>
  <td><%= date_format(institution.updated_at, "datetime") %></td>
  <td class="text-end">
    <div class="d-flex gap-3">
      <%= link_to raw("<i class='mdi mdi-eye font-size-18'></i>"), send("#{current_admin_panel.class_name}_institution_path", institution), class: "text-primary", "data-bs-toggle": "tooltip", "data-bs-placement": "top", "title": "View detail" if action_policy("show") %>
      <%= link_to raw("<i class='mdi mdi-pencil font-size-18'></i>"), send("edit_#{current_admin_panel.class_name}_institution_path", institution), class: "text-success", "data-bs-toggle": "tooltip", "data-bs-placement": "top", "title": "Update" if action_policy("update") %>
      <%= link_to raw("<i class='mdi mdi-delete font-size-18'></i>"), send("#{current_admin_panel.class_name}_institution_path", institution), class: "text-danger", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, "data-bs-toggle": "tooltip", "data-bs-placement": "top", "title": "Delete" if action_policy("destroy") %>
    </div>
  </td>
</tr>
