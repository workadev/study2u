<div class="nested-fields">
  <div class="form-group row col-sm-12">
    <%= f.label :video, "Video", class: "col-sm-1 col-form-label" %>
    <div class="col-sm-10">
      <%= f.file_field :video, class: "form-control" %>
      <%= check_attachment(object: f.object, field_name: "video") %>
    </div>
    <label class="col-sm-1 col-form-label" style="padding-top: 0px;">
      <%= link_to_remove_association raw("<i class='fa fa-minus'></i>"), f, { class: "btn btn-danger float-right", style: "float: right;", wrapper_class: 'nested-fields', data: { turbo: false } } %>
    </label>
  </div>
</div>
